// 注册模态框
.modal.fade(
  id="registermodal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myModalLabel"
)
  .modal-dialog(role="document") 
    .modal-content
      .modal-header
        button.close(
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        )
          span(aria-hidden="true") &times;
        h4.modal-title 注册
      form.form-horizontal(
        method="post"
        action="/user/register"
        onsubmit="return check('register')"
      ) 
        .modal-body
          .form-group
            label.col-md-3.control-label(
                for="registername"
              ) 用户名
            .col-md-8
              input.form-control(
                type="text"
                id="registername"
                name="user[name]"
                placeholder="起个名呗"
              )
          .form-group
            label.col-md-3.control-label(
                for="registerpsw"
              ) 密码
            .col-md-8
              input.form-control(
                type="password"
                id="registerpsw"
                name="user[password]"
                placeholder="设个密码呗"
              )
          .form-group
            label.col-md-3.control-label(
                for="registerpswconf"
              ) 密码确认
            .col-md-8
              input.form-control(
                type="password"
                id="registerpswconf"
                placeholder="要和密码一样呢"
              )
          .form-group
            label.col-md-3.control-label(
                for="registerphone"
              ) 手机号
            .col-md-8
              input.form-control(
                type="text"
                id="registerphone"
                name="user[phone]"                  
                placeholder="留个手机呗"
              )
          .form-group
            label.col-md-3.control-label(
                for="registerQQ"
              ) QQ
            .col-md-8
              input.form-control(
                type="text"
                id="registerQQ"
                name="user[QQ]"                  
                placeholder="留个QQ呗"
              )
          .form-group
            label.col-md-3.control-label(
                for="registercollege"
              ) 学院
            .col-md-8
              input.form-control(
                type="text"
                id="registercollege"
                name="user[college]"                  
                placeholder="你是哪个学院的呢"
              )
          .form-group
            label.col-md-3.control-label(
                for="registeremail"
              ) 邮箱
            .col-md-8
              input.form-control(
                type="email"
                id="registeremail"
                name="user[email]"                  
                placeholder="留个邮箱呗"
              )
          .form-group
            label.col-md-3.control-label(
                for="registeradr"
              ) 地址
            .col-md-8
              input.form-control(
                type="text"
                id="registeradr"
                name="user[address]"                  
                placeholder="留个地址呗"
              )
        .modal-footer 
          button.btn.btn-default(
            type="button"
            data-dismiss="modal"
          ) 关闭
          button.btn.btn-success(
            type="submit"
          ) 提交

